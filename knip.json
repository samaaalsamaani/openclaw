{
  "$schema": "https://unpkg.com/knip@latest/schema.json",
  "entry": [
    "src/index.ts",
    "src/entry.ts",
    "src/extensionAPI.ts",
    "src/cli/**/*.ts",
    "src/commands/**/*.ts",
    "scripts/**/*.ts",
    "scripts/**/*.mjs"
  ],
  "project": ["src/**/*.ts", "scripts/**/*.ts", "scripts/**/*.mjs"],
  "ignore": [
    "**/*.test.ts",
    "**/*.e2e.test.ts",
    "**/*.live.test.ts",
    ".pi/**",
    "apps/**",
    "assets/**",
    "docs/**",
    "test/**",
    "ui/**",
    "scripts/dev/**",
    "scripts/run-node.d.mts",
    "scripts/watch-node.d.mts",
    "scripts/pre-commit/**",
    "src/browser/pw-session.mock-setup.ts",
    "src/process/test-timeouts.ts",
    "src/auto-reply/reply/export-html/template.js",
    "extensions/**",
    "vitest.extensions.config.ts",
    "vitest.gateway.config.ts"
  ],
  "ignoreDependencies": ["@types/*"],
  "workspaces": {
    "extensions/*": {
      "entry": ["src/index.ts", "index.ts"],
      "project": ["src/**/*.ts", "*.ts"]
    },
    "packages/*": {
      "entry": ["src/index.ts", "index.ts"],
      "project": ["src/**/*.ts"]
    }
  }
}
